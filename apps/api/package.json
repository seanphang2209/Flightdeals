{
  "name": "@getaway/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local --persist-to=./.wrangler/state",
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "db:migrate": "wrangler d1 migrations apply getaway_sg_db --local",
    "db:generate": "wrangler d1 migrations create getaway_sg_db --local",
    "seed:holidays": "wrangler d1 execute getaway_sg_db --local --file=./scripts/seedHolidays.sql"
  },
  "dependencies": {
    "hono": "^4.5.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240729.0",
    "eslint": "^8.57.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "wrangler": "^4.35.0"
  }
}